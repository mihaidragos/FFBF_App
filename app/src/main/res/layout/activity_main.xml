<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="691dp">

                <Button
                    android:id="@+id/testingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="@string/log_in"
                    app:layout_constraintStart_toEndOf="@+id/logoutBtn"
                    app:layout_constraintTop_toTopOf="@+id/logoutBtn" />

                <Button
                    android:id="@+id/listViewBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="124dp"
                    android:text="List"
                    app:layout_constraintStart_toEndOf="@+id/myAccountBtn"
                    app:layout_constraintTop_toTopOf="@+id/myAccountBtn" />

                <Button
                    android:id="@+id/testingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:text="@string/register"
                    app:layout_constraintStart_toEndOf="@+id/testingBtn"
                    app:layout_constraintTop_toTopOf="@+id/testingBtn" />

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="Log Out"
                    app:layout_constraintTop_toBottomOf="@+id/restaurantList"
                    tools:layout_editor_absoluteX="32dp" />

                <ListView
                    android:id="@+id/restaurantList"
                    android:layout_width="416dp"
                    android:layout_height="268dp"
                    android:layout_marginTop="192dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/myAccountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:text="My Account"
                    app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
                    app:layout_constraintStart_toStartOf="@+id/logoutBtn" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>